@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
  @apply text-base text-base-dark font-roboto;
  @apply bg-base-dark;
}

.crop-text {
  @apply whitespace-nowrap overflow-hidden text-ellipsis;
}

.pwa-app {
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
}
